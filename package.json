{
  "name": "monorepo-demo",
  "private": true,
  "workspaces": [
    "packages/@tan/*"
  ],
  "scripts": {
    "lint": "eslint packages/**/*",
    "lint:css": "stylelint packages/**/*.{vue,scss,css,sass}"
  },
  "lint-staged": {
    "packages/**/*.{js,ts,jsx,tsx,vue}": "eslint",
    "packages/**/*.{vue,scss,css,sass}": "stylelint --allow-empty-input"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "FORCE_COLOR=1 node scripts/verify-commit.js"
    }
  },
  "dependencies": {
    "vue": "^3.2.25"
  },
  "devDependencies": {
    "lerna": "^4.0.0",
    "chalk": "^4.1.2",
    "conventional-changelog-cli": "^2.1.1",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.23.4",
    "execa": "^5.1.1",
    "husky": "4.2.3",
    "jest": "^27.0.6",
    "lint-staged": "^11.1.1",
    "minimist": "^1.2.5",
    "npm-run-all": "^4.1.5",
    "prompts": "^2.4.1",
    "rollup": "^2.55.1",
    "semver": "^7.3.5",
    "eslint-plugin-typescript": "^0.14.0",
    "eslint-plugin-vue": "^7.19.1",
    "ts-node": "^10.3.0",
    "typescript": "^4.4.4",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-scss": "^3.21.0",
    "@vitejs/plugin-vue": "^2.0.0",
    "vite": "^2.7.2",
    "vue-tsc": "^0.29.8",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "vue-eslint-parser": "^7.11.0",
    "sass": "^1.42.1"
  }
